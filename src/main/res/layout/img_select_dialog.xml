<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp" android:gravity="center">

<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:text="Upload image from"
android:textSize="30sp"
android:textColor="@android:color/black"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageButton
                android:layout_width="210dp"
                android:layout_height="121dp" app:srcCompat="@drawable/gallery" android:id="@+id/galleryBtn"
                android:layout_weight="1" android:scaleType="fitCenter" android:background="@android:color/transparent"/>
        <ImageButton
                android:layout_width="186dp"
                android:layout_height="127dp" app:srcCompat="@drawable/camera" android:id="@+id/cameraBtn"
                android:layout_weight="1" android:scaleType="fitCenter" android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>