<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:layout_width="356dp"
            android:layout_height="81dp"
            tools:text="Discover barbers near you" android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:text="Discover barbers near you" android:autoText="false" android:gravity="center_horizontal"
            android:id="@+id/textView3" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/postCodetxt"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintVertical_bias="0.648"/>
    <EditText
            android:layout_width="192dp"
            android:layout_height="52dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/postCodetxt"
            android:hint="Enter postcode" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.491"/>
    <ImageButton
            android:layout_width="42dp"
            android:layout_height="35dp" app:srcCompat="@drawable/rightarrow"
            android:id="@+id/clientSearchBtn"
            android:scaleType="fitCenter" app:layout_constraintStart_toEndOf="@+id/postCodetxt"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:background="#00000000"/>
    <ImageButton
            android:layout_width="41dp"
            android:layout_height="43dp" app:srcCompat="@drawable/location"
            android:id="@+id/location_button"
            android:scaleType="fitCenter" android:background="@android:color/transparent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/postCodetxt" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>